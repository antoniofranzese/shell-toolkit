#!/bin/zsh

ME=$(basename $0)

case $1 in
	preview)
		$SVN log -v -c $2
		;;

	diffs)
		$SVN diff -c $2 | delta --paging never --line-numbers
		;;
	
	view)
		$SVN diff -c $2 | delta --side-by-side --paging always
		;;

	lines)
		[[ $# > 0 ]] && shift
		LINE=""
		while read chunk; do

			if [[ "$chunk" =~ ^\--- ]]; then
				if [ -n "$LINE" ]; then
					echo $LINE
				fi
				LINE=""
			else
				[ -n "$LINE" ] && LINE=$LINE\ \|
				LINE=$LINE\ $chunk
			fi

		done <<< $($SVN log $* | grep -v "^$" )
		;;

	*)
		URL=$(svn eval RelativeURL)
		LOG_PATH=${1:-$URL}	
		$ME lines $LOG_PATH \
			| awk -F'|' '{printf "%-8s %-20.20s %.20s %s\n", $1, $2, $3, $5}' \
			| fzf \
				--header=$'\n^P: Diff Preview   ^V: View' \
				--preview "$0 preview {1}" \
				--bind "ctrl-v:execute($0 view {1})" \
				--bind "ctrl-p:preview($0 diffs {1})"
		;;
esac
