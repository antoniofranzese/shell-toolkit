#!/bin/zsh

URL=$($SVN info | grep "^Relative URL:" | cut -d' ' -f3- )
REV=$($SVN info | grep "^Revision:" | cut -d' ' -f2 )
HEADER=Revision:\ $URL@$REV

OUT=$($SVN status $*)
REMOTE=$(echo $OUT | grep "Status against")
BODY=$(echo $OUT | grep -v "Status against")

[ -n "$REMOTE" ] && HEADER=$HEADER$'\n'$REMOTE

echo $HEADER
echo $BODY
